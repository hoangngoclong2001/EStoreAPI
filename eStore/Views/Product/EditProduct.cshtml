@using BusinessObject.Models
@using BusinessObject.Res
@using System.Collections
@model BusinessObject.Res.ProductRes
@{
    List<CateSelectRes> categories = ViewBag.categories;
    var categoryId = ViewBag.categoryId;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Long</title>
</head>

<!-- css file -->
<link rel="stylesheet" href="~/css/dashboard.css">

<!-- font awesome icon -->
<link rel="stylesheet"
      href="https://maxst.icons8.com/vue-static/landings/line-awesome/line-awesome/1.3.0/css/line-awesome.min.css">>

<body>
    <div class="dashboards">
        <input type="checkbox" id="menu-toggle">
        <div class="sidebar">
            <div class="side-header">
                <h3> <img src="~/images/phone-icon3.png" alt="image" class="logo" id="logo"></h3>
            </div>
            <div class="side-content">
                <div class="profile">
                    <h4>WELCOME</h4>
                    <small>David</small>
                </div>
                <div class="side-menu">
                    <ul>
                        <li>
                            <a href="" class="active">
                                <span class="las la-home"></span>
                                <small>Dashboard</small>
                            </a>
                        </li>
                        <li>
                            <a href="">
                                <span class="las la-shopping-bag"></span>
                                <small>Order</small>
                            </a>
                        </li>
                        <li>
                            <a href="">
                                <span class="las la-phone"></span>
                                <small>Products</small>
                            </a>
                        </li>
                        <li>
                            <a href="">
                                <span class="las la-user"></span>
                                <small>Customer</small>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="main-content">
            <header>
                <div class="header-content">
                    <label for="menu-toggle">
                        <span class="las la-bars"></span>
                    </label>
                    <div class="header-menu">
                        <div class="user">
                            <div class="bg-img" style="background-image: url(~/images/1.jpeg)"></div>
                            <span class="las la-power-off"></span>
                            <span>Logout</span>
                        </div>
                    </div>
                </div>
            </header>
            <main>
                <div class="page-header">
                    <h1>Edit product</h1>
                </div>
                <div class="containerproduct">
                    <form asp-action="productedit" method="post" enctype="multipart/form-data">
                        <label for="ProductName"><b>ProductName(*)</b></label>
                        <input asp-for="ProductName" type="text" placeholder="ProductName" name="ProductName" required>
                        <br>
                        <label for="Unit"><b>UnitInPrice($)</b></label>
                        <input asp-for="UnitPrice" type="text" placeholder="Enter UnitInPrice" name="psw" required>
                        <br>
                        <label for="Unit"><b>Quantity per unit:</b></label>
                        <input asp-for="QuantityPerUnit" type="text" placeholder="Enter UnitInPrice" name="psw" required>
                        <br>
                        <label for="Quality"><b>Units in stock (*):</b></label>
                        <input asp-for="UnitsInStock" type="text" placeholder="Enter Quality" name="psw" required>
                        <br>
                        <label for="Reorderlevel"><b>Reorderlevel(*)</b></label>
                        <input asp-for="ReorderLevel" type="text" placeholder="Enter level" name="psw" required>
                        <br>
                        <label for="UnitsInStock"><b>Units on order:(*)</b></label>
                        <input asp-for="UnitsOnOrder" type="text" placeholder="Enter stock" name="psw" required>
                        <br>
                        <label for="Discontinued"><b>Discontinued(*)</b></label>
                        <input type="checkbox" required>
                        <br>
                        <label for="Category"><b>Category(*)</b></label>
                        <br>
                        <  <select name="categoryId" id="">
                            <option value="">Remove selection</option>

                            @foreach (var i in categories)
                            {
                                @if (categoryId is null)
                                {
                                    <option value="@i.CategoryId">@i.CategoryName</option>
                                }
                                else
                                {
                                    @if (categoryId == i.CategoryId && i.CategoryId)
                                    {
                                        <option value="@i.CategoryId" selected>@i.CategoryName</option>
                                    }

                                }
                            }
                        </select>
                        <br>
                        <button type="submit">Submit</button>
                    </form>

                </div>


            </main>

        </div>
    </div>
</body>

</html>