<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Long</title>
</head>

<!-- css file -->
<link rel="stylesheet" href="/css/dashboard.css">

<!-- font awesome icon -->
<link rel="stylesheet"
      href="https://maxst.icons8.com/vue-static/landings/line-awesome/line-awesome/1.3.0/css/line-awesome.min.css">>

<body>
    <div class="dashboards">
        <input type="checkbox" id="menu-toggle">
        <div class="sidebar">
            <div class="side-header">
                <h3> <img src="~/images/phone-icon3.png" alt="image" class="logo" id="logo"></h3>
            </div>

            <div class="side-content">
                <div class="profile">
                    <h4>WELCOME</h4>
                    <small>David</small>
                </div>

                <div class="side-menu">
                    <ul>
                        <li>
                            <a href="" class="active">
                                <span class="las la-home"></span>
                                <small>Dashboard</small>
                            </a>
                        </li>
                        <li>
                            <a href="">
                                <span class="las la-shopping-bag"></span>
                                <small>Order</small>
                            </a>
                        </li>
                        <li>
                            <a href="">
                                <span class="las la-phone"></span>
                                <small>Products</small>
                            </a>
                        </li>

                        <!-- <li>
                            <a href="">
                                <span class="las la-shopping-cart"></span>
                                <small>Orders</small>
                            </a>
                        </li> -->
                        <li>
                            <a href="">
                                <span class="las la-user"></span>
                                <small>Customer</small>
                            </a>
                        </li>

                    </ul>
                </div>
            </div>
        </div>

        <div class="main-content" style="margin-top: 30px">

            <header>
                <div class="header-content">
                    <label for="menu-toggle">
                        <span class="las la-bars"></span>
                    </label>

                    <div class="header-menu">
                        <div class="user">
                            <div class="bg-img" style="background-image: url(img/1.jpeg)"></div>

                            <span class="las la-power-off"></span>
                            <span>Logout</span>
                        </div>
                    </div>
                </div>
            </header>


            <main>
                <div id="content">
                    <div id="content-right">
                        <div class="content-main">
                            <div id="profile-content">
                                <div class="profile-content-col">
                                    <label>Product name (*): <br /></label>
                                    <div>UnitPrice: <br /></div>
                                </div>
                                <div class="profile-content-col">
                                    <div>Quantity per unit: <br /></div>
                                    <div>Units in stock (*): <br /></div>
                                </div>
                                <div class="profile-content-col">
                                    <div>Category (*): <br /></div>
                                    <div>Reorder level: <br /></div>
                                </div>
                                <div class="profile-content-col">
                                    <div>Units on order: <br /></div>
                                    <div>Discontinued: <br /></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>


            </main>

        </div>
    </div>
</body>

</html>